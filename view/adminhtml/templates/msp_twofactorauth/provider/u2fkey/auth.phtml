<textarea cols="80" rows="30">
    <?php print_r($block->getAuthenticateData()) ?>
</textarea>

<form>
    <fieldset class="admin__fieldset">
        <label for="register"><?= __("Press your key button") ?></label>
        <input type="password" name="register" id="register">
    </fieldset>
</form>

<script>
  require(['jquery', 'MSP_TwoFactorAuth/js/u2f'], function ($) {
    var requestData = <?= $block->getAuthenticateData() ?>;

    setTimeout(u2f.sign(
      requestData,
      function (signResponse) {
        console.log(signResponse);

        $.post('<?= $block->getPostUrl() ?>', {
          'request': requestData,
          'response': signResponse
        }).done(function (res) {
          if (res['success']) {
            alert('ok');
          } else {
            alert('error');
          }
        }).fail(function () {
          alert('error');
        })
      }, 10
    ), 3)
  });
</script>


